<div id="{{ id }}">
    <div class="field">
        <div class="heading">
            <label id="readonly-label" for="readonly">Read Only</label>
        </div>
        <jason-switch id="readonly" name="readonly" :value="{{ field['readonly'] ? field['readonly'] : 0 }}" @toggled="readonly = $event"></jason-switch>
    </div>

    <div :class="readonly == true ? 'opacity-0 absolute pointer-events-none' : ''" class="field">
        <div class="heading">
            <label id="allowRawEditing-label" for="allowRawEditing">Allow Raw Editing</label>
        </div>
        <jason-switch 
            id="allowRawEditing"
            name="allowRawEditing"
            :value="{{ field['readonly'] == 'true' ? 'false' : field['allowRawEditing'] ? field['allowRawEditing'] : 'false' }}" 
            @toggled="allowRawEditing = $event">
        </jason-switch>
    </div>

    <div class="field">
        <div class="heading">
            <label id="fieldType-label" for="fieldType">Field Type</label>
        </div>
        <div class="input ltr">
            <div class="select">
                <select id="fieldType" name="fieldType">
                    <option value="TEXT" {{ field['fieldType'] === 'TEXT' ? 'selected' ? '' }}
                    >TEXT</option>
                    <option value="MEDIUMTEXT" {{ field['fieldType'] === 'MEDIUMTEXT' ? 'selected' ? '' }}
                    >MEDIUMTEXT</option>
                    <option value="LONGTEXT" {{ field['fieldType'] === 'LONGTEXT' ? 'selected' ? '' }}
                    >LONGTEXT</option>
                </select>
            </div>
        </div>
    </div>
</div>
